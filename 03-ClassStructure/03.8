public class SurfaceArea
{
    static double pi=3.14;
    
    public static void Circle(float r)
    {
        double s=pi*r*r;
        System.out.println("Surface area of circle is "+ s+ ".");
    }

    public static void Triangle(float a, float h)
    {   
        float s=(a*h)/2;
        System.out.println("Surface area of triangle is "+ s+ ".");
    }
    public static void Rectangle(float l, float w)
    {
        float s=l*w;
        System.out.println("Surface area of rectangle is "+ s+ ".");
    }
}
